{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Team List</h1>
        <div class="row">
            <div class="col-md-6">
                <ul class="list-group">
                    {% for team in teams %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{ team.getTeamName() }}
                            <span>
                                <a href="{{ path('team_edit', {id: team.id}) }}" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a href="{{ path('team_delete', {id: team.id}) }}" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure?')">Delete</a>
                            </span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}