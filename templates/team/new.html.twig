{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Create a new Team</h1>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.teamName) }}
                            {{ form_widget(form.teamName, {'attr': {'class': 'form-control', 'style': 'font-size: 0.875em;' }}) }}
                        </div>
                        <div class="form-group mt-3">
                            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
        <h2 class="mt-5">Team List</h2>
        <div class="row">
            <div class="col-md-6">
                <ul class="list-group">
                    {% for team in teams %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{ team.teamName }}
                            <span>
                                <a href="{{ path('team_edit', {id: team.id}) }}" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a href="{{ path('team_delete', {id: team.id}) }}" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure?')">Delete</a>
                            </span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}